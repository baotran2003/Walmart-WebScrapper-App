<%- include('../partials/header') -%>
<div class="col-9">
    <div class="container p-3 w-100">
        <h1 class="mt-5 mb-4">In Stock Products</h1>
        <%- include('../partials/messages') -%>
        <!-- Messages -->

        <div class="container">
            <table class="table table-bordered" id="dataTable" width="90%" cellspacing="0">
                <thead>
                    <tr>
                        <th>SKU</th>
                        <th>Name</th>
                        <th>Price</th>
                        <th>Stock</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                
                <tbody>
                    <% products.forEach((product) => { %>
                    <tr>
                        <td><%= product.sku %></td>
                        <td><%= product.title %></td>
                        <td><%= product.newPrice %></td>
                        <td><%= product.newStock %></td>
                        <td>
                            <a target="black" class="btn btn-primary p-2" href="<%=product.url%>"
                                ><i class="fas fa-eye"></i
                            ></a>
                            <form
                                style="display: inline"
                                action="/delete/product/<%=product.id%>?_method=DELETE"
                                method="POST"
                            >
                                <input type="hidden" name="_method" value="DELETE" />
                                <button style="cursor: pointer" type="submit" class="btn btn-danger p-2">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </form>
                        </td>
                    </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>
</div>
<%- include('../partials/footer') -%>
