<%- include('../partials/header') -%>
<div class="col-9">
    <div class="container p-3 w-100">
        <h1 class="mt-5 mb-4">Out of Stock Products</h1>
        <%- include('../partials/messages') -%>
        <!-- Messages -->

        <div class="container">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>SKU</th>
                        <th>Name</th>
                        <th>Price</th>
                        <th>Stock</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- Products Loop -->
                    <% products.forEach((product) => { %>
                    <tr class="in-stock">
                        <td><%= product.sku %></td>
                        <td><%= product.title %></td>
                        <td><%= product.newPrice %></td>
                        <td><%= product.newStock %></td>
                        <td>
                            <a target="_blank" class="btn btn-primary p-2" href="<%product.url%>">View</a>
                            <form style="display: inline" action="#" method="POST">
                                <input type="hidden" name="_method" value="DELETE" />
                                <button style="cursor: pointer" type="submit" class="btn btn-danger p-2">Delete</button>
                            </form>
                        </td>
                    </tr>
                    <% }) %>
                    <!-- End Products Loop -->
                </tbody>
            </table>
        </div>
    </div>
</div>
<%- include('../partials/footer') -%>
